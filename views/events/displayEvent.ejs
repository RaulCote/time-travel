<section class="container">
  <h1> <%= event.name %> </h1>
  <h2> <%= event.description %> </h2>
  <h3>Event Assistants</h3>
  <ul class="event-attendees">
    <% event.attendees.forEach((item) => { %>
      <li><%= item.username %></li>
    <% }) %>
  </ul>
  <img class="event-image" src="<%= event.picture %>" alt="">
  <h4>You will like it if you dig the <%= event.era %> era. </h4>
  <form method="POST" action="/events/<%=event._id %>/attend"><button class="button">Attend</button></form>

  <% if (event.owner == currentUser._id) { %>
    <a class="button" href="/events/<%=event._id %>/delete">Delete</a>
    <a class="button" href="/events/<%=event._id %>/edit">Edit</a>
  <% } %>
</section>

 
